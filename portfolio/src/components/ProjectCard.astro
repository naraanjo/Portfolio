---
import Card from "./Card.astro";

interface Props {
  title: string;
  imgSrc: string;
  imgAlt: string;
  githubUrl: string;
}

const { title, imgSrc, imgAlt, githubUrl } = Astro.props;
---

<Card title={title}>
  {/* NUEVO CONTENEDOR: Aplicamos la alineación central aquí */}
  <div class="project-content-wrapper">
    <img src={imgSrc} alt={imgAlt} loading="lazy" />
    
    {/* El slot contendrá la descripción */}
    <slot /> 
    
    <a href={githubUrl} class="btn" target="_blank" rel="noopener noreferrer">
      Ver Proyecto
    </a>
  </div>
</Card>

<style lang="scss">
  /* NUEVO: Centra el botón y la imagen */
  .project-content-wrapper {
    text-align: center; /* Centra elementos 'inline' y 'inline-block' (como el botón y la imagen) */
  }

  /* Usando :global() para dar estilo a la img */
  :global(.card img) {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 1rem;
    transition: transform 0.3s ease;
    border: 1px solid var(--border-color);
  }

  :global(.card img:hover) {
    transform: scale(1.05);
  }

  :global(.card p) {
    margin-bottom: 0.5rem;
    text-align: left; 
  }
</style>